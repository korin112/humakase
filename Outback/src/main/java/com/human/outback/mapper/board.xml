<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
<mapper namespace="com.human.outback.iBoard">
	<select id="spotList" resultType="com.human.outback.Board">
		select spot_code, spot_name from spot
	</select>
	
	<select id="menuList" resultType="com.human.outback.Board">
		select menu_code, menu_name from menu
	</select>
	
	<insert id="insertBoard">
		insert into board(title,content,writer,vdate,spot_code,menu_code) 
		values(#{param1},#{param2},#{param3},#{param4},#{param5},#{param6})
	</insert>
	
	<!-- board list -->
	<select id="boardList" resultType="com.human.outback.Board">
    	select a.board_id,a.title,c.spot_name,b.menu_name,a.content,a.writer,a.created
		from board a, menu b, spot c
		where a.menu_code=b.menu_code
		and a.spot_code=c.spot_code
		limit #{param1},#{param2}
	</select>
	
	<select id="getTotal" resultType="int">
        select count(*) from board
    </select>
    
    <!-- 내용 보기 -->
	<select id="getBoard" resultType="com.human.outback.Board">
		select a.board_id,a.vdate,a.title,c.spot_name,b.menu_name,a.content,a.writer,a.updated
		from board a, menu b, spot c
		where a.menu_code=b.menu_code
		and a.spot_code=c.spot_code
		and board_id=#{board_id}
	</select>
	
	 <update id="updateBoard">
    	update board
		set title=#{param2},content=#{param3},updated=current_date
		where board_id=#{param1}
    </update>
    
	<delete id="deleteBoard">
		delete from board where board_id=#{board_id}
	</delete>
</mapper>